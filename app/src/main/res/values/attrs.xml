<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomToolbar">
        <attr name="title" format="string" />
        <attr name="elevation" format="dimension" />
        <attr name="btnBackShow" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BoxedVertical">
        <attr name="points" format="integer" />
        <attr name="max" format="integer" />
        <attr name="min" format="integer"/>
        <attr name="defaultValue" format="integer" />
        <attr name="textBottomPadding" format="integer" />
        <attr name="libCornerRadius" format="integer" />
        <attr name="step" format="integer"/>

        <attr name="defaultImage" format="reference"/>
        <attr name="minImage" format="reference"/>
        <attr name="maxImage" format="reference"/>

        <attr name="progressColor" format="color" />
        <attr name="backgroundColor" format="color" />

        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>

        <attr name="clockwise" format="boolean" />
        <attr name="enabled" format="boolean" />
        <attr name="touchDisabled" format="boolean" />
        <attr name="textEnabled" format="boolean" />
        <attr name="imageEnabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="GravitySnapRecyclerView">
        <attr name="snapGravity" format="enum">
            <enum name="start" value="0" />
            <enum name="top" value="1" />
            <enum name="end" value="2" />
            <enum name="bottom" value="3" />
            <enum name="center" value="4" />
        </attr>
        <attr name="snapEnabled" format="boolean" />
        <attr name="snapLastItem" format="boolean" />
        <attr name="snapToPadding" format="boolean" />
        <attr name="snapScrollMsPerInch" format="float" />
        <attr name="snapMaxFlingSizeFraction" format="float" />
    </declare-styleable>
</resources>